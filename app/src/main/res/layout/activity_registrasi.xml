<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registrasi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="motion.istiqomah.com.RegistrasiActivity">


    <CheckBox
        android:layout_height="wrap_content"
        android:id="@+id/mentor"
        android:layout_alignBaseline="@+id/askmentor"
        android:layout_alignBottom="@+id/askmentor"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="45dp"
        android:layout_marginEnd="45dp"
        android:layout_width="wrap_content" />

    <TextView
        android:text="Nama Lengkap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/namalengkap"
        android:textSize="25dp"
        android:layout_below="@+id/password"
        android:layout_alignLeft="@+id/password"
        android:layout_alignStart="@+id/password" />

    <TextView
        android:text="Mentor?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/askmentor"
        android:textSize="25dp"
        android:layout_below="@+id/fullname"
        android:layout_alignLeft="@+id/fullname"
        android:layout_alignStart="@+id/fullname" />

    <TextView
        android:text="Kata Sandi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:id="@+id/katasandi"
        android:layout_alignLeft="@+id/username"
        android:layout_alignStart="@+id/username"
        android:layout_below="@+id/username" />

    <TextView
        android:text="Nama Pengguna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:textSize="25dp"
        android:id="@+id/namapengguna"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/username"
        android:layout_alignStart="@+id/username" />

    <EditText
        android:layout_width="320dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/username"
        android:layout_height="45dp"
        android:layout_below="@+id/namapengguna"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="320dp"
        android:layout_height="45dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/password"
        android:layout_below="@+id/katasandi"
        android:layout_alignLeft="@+id/katasandi"
        android:layout_alignStart="@+id/katasandi" />

    <EditText
        android:layout_width="320dp"
        android:layout_height="45dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/fullname"
        android:layout_below="@+id/namalengkap"
        android:layout_alignLeft="@+id/namalengkap"
        android:layout_alignStart="@+id/namalengkap" />

    <Button
        android:text="Daftar"
        android:textSize="24dp"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:id="@+id/daftar"
        android:layout_below="@+id/mentor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp" />

</RelativeLayout>
